<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta name="author" content="jeseok95@gmail.com"/>
    <title>체스 게임</title>
    <link href="css/index.css" rel="stylesheet"/>
    <link href="css/fontawesome.min.css" rel="stylesheet"/>
    <link href="css/all.min.css" rel="stylesheet"/>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</head>
<body>
<div id="wrapper">
    <header>
        <h1>
            <i class="fas fa-chess fa-3x"></i>
        </h1>
    </header>
    <nav>
        <div class="wrapper">
            <div class="room-container">
                <div class="room-title"><h3>게임 목록</h3></div>
                <div class="room-table-head">
                    <div class="room-id table-head">id</div>
                    <div class="room-name table-head">title</div>
                </div>
                <div class="room-table-body">
                    {{#chessRoomIds}}
                        <a class="room-button" id="{{roomId}}">
                            <div class="room">
                                <div class="room-id">{{roomId}}</div>
                                <div class="room-name">{{title}}</div>
                            </div>
                        </a>
                    {{/chessRoomIds}}
                </div>
            </div>
            <div class="box">
                <form>
                    <input type="button" onclick="chessStart()" value="&#xf197;" class="fa-3x">
                </form>
                <span class="arrowIcon">새로 시작</span>
            </div>
        </div>
    </nav>
    <footer class="footer">
        <p>
            Copyright 2020
            <a href="https://github.com/joseph415"
            >https://github.com/joseph415</a
            >,
            <a href="https://github.com/jjj0611"
            >https://github.com/jjj0611</a
            >
            All rights reserved
        </p>
    </footer>
</div>
<script>
    window.onload = () => {
        document.querySelectorAll(".room-button").forEach(element => {
            element.addEventListener("click", event => {
                event.preventDefault();
                loadGame(element.id);
            })
        });
    };

    const loadGame = (id) => {
        location.href = "/chess/" + id;
    };

    const chessStart = () => {
        const title = prompt("방 제목을 입력해주세요");
        const createChessRequest = {
            method: "POST",
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                "title": title,
            })
        };

        fetch("/createChessGame", createChessRequest)
                .then(response => response.json())
                .then(data => {
                    console.log(data);
                    location.href = "/chess/" + data;
                })
    };
</script>
</body>
</html>
